<?xml version="1.0" encoding="utf-8" ?>
<system>
  <!-- notice shown under screen. content is set by remote server -->
  <!-- font: string of the font name -->
  <!-- color: string of the color name -->
  <!-- bgcolor: string of the color name of background -->
  <!-- size: number of font size -->
  <!-- bold: 0/1 -->
  <!-- speed: interval time in ms -->
  <notice font="" color="" bgcolor="" size="" bold="" speed="" />

  <!-- date window in a year begin with this till next tag (Jan.01 to Dec.31) -->
  <period start=""  mon="0" tus="0" wed="0" thu="0" fri="0" sat="0" sun="0">

    <!-- time window in a day begin with this till next tag (00:00 to 24:00) -->
    <!-- mode: random/ sequencial -->
    <!-- play frequency control can be made by add duplicate tag of content -->
    <time start="" mode="">

      <!-- content to play -->
      <!-- type: video/ ppt -->
      <!-- for ppt type, duration: time for per page -->
      <item type="" src="" duration="" />

    </time>
  </period>
</system>